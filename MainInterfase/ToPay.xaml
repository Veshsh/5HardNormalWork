<Window x:Class="_5WorkNormal.MainInterfase.ToPay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5WorkNormal.MainInterfase"
        mc:Ignorable="d"
        Title="ToPay" Height="225" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="ToPay" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <TextBox Grid.Column="1" x:Name="Pay"/>
        <Button Grid.ColumnSpan="2" Grid.Row="1" Content="Ok" FontSize="24" Click="Button_Click"/>
    </Grid>
</Window>
