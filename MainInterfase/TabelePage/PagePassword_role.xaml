<Page x:Class="_5WorkNormal.MainInterfase.TabelePage.PagePassword_role"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_5WorkNormal.MainInterfase.TabelePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePassword_role">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="6*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="ss" Grid.RowSpan="4" IsReadOnly="True"/>
        <Button Content="Create Mod" Grid.Column="1" Grid.Row="1" Click="CreateMod"/>
        <Button Content="Delete Mod" Grid.Column="1" Grid.Row="2" Click="Delete"/>
        <Button Content="Update or Create" Grid.Column="1" Grid.Row="3" Click="UpdateCreat"/>
    </Grid>
</Page>
